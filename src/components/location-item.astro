---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  alt: string;
  title: string;
  description: string;
}

const { image, alt, title, description } = Astro.props;
---

<li
  class="flex flex-shrink-0 flex-row items-start gap-4 px-4 max-sm:flex-col max-sm:items-center"
>
  <div class="h-20 w-20 flex-shrink-0 overflow-hidden rounded-full">
    <Image src={image} alt={alt} class="h-full w-full object-cover" />
  </div>
  <div class="flex flex-col max-sm:text-center">
    <span class="text-munch-blue font-semibold">{title}</span>
    <span class="text-munch-blue text-sm">{description}</span>
  </div>
</li>
