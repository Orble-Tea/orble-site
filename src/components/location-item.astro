---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata;
  alt: string;
  title: string;
  description: string;
}

const { image, alt, title, description } = Astro.props;
---

<li class="flex flex-row max-sm:flex-col items-start max-sm:items-center gap-4 flex-shrink-0 px-4">
  <div class="w-20 h-20 rounded-full overflow-hidden flex-shrink-0">
    <Image src={image} alt={alt} class="w-full h-full object-cover" />
  </div>
  <div class="flex flex-col max-sm:text-center">
    <span class="font-semibold text-munch-blue">{title}</span>
    <span class="text-sm text-munch-blue">{description}</span>
  </div>
</li>
