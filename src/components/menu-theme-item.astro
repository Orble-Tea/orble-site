---
interface Props {
  image: string;
  alt: string;
  title: string;
  description: string;
}

const { image, alt, title, description } = Astro.props;
---

<li class="flex items-start space-x-6 max-sm:flex-col max-sm:space-x-0 max-sm:space-y-4">
  <div class="w-20 h-20 rounded-full overflow-hidden border-2 border-white flex-none mx-auto max-sm:mx-0">
    <img src={image} alt={alt} class="w-full h-full object-cover" />
  </div>
  <div class="flex-1 text-left max-sm:text-center">
    <p class="text-sm text-munch-blue">
      <span class="font-semibold text-white block">{title}</span>
      {description}
    </p>
  </div>
</li>