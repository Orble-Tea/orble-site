---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  image: ImageMetadata;
  alt: string;
  title: string;
  description: string;
}

const { image, alt, title, description } = Astro.props;
---

<li class="flex items-start space-x-6 max-sm:flex-col max-sm:space-x-0 max-sm:space-y-4 max-sm:items-center">
  <div class="w-12 h-12 max-sm:w-16 max-sm:h-16 rounded-full overflow-hidden border-2 border-white flex-none">
    <Image src={image} alt={alt} class="w-full h-full object-cover" />
  </div>
  <div class="flex-1 text-left max-sm:text-center">
    <p class="text-sm text-munch-blue">
      <span class="font-semibold text-white block">{title}</span>
      {description}
    </p>
  </div>
</li>
