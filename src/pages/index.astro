---
import "~/styles/index.css";

/* Any Astro component imports MUST come after global style imports, due to css loading order! (Especially tailwind.) */
import Path from "path";
import { Image } from "astro:assets";
import type { NavItem, SectionInfo } from "~/types";

import Header from "$components/header.astro";
import Splash from "$components/splash.astro";

import * as about from "$content/sections/about.mdx";

import siteInfo from "$content/site";
import logo from "~/assets/images/logo_inkscape.svg";

import ImageCarousel from "$components/image-carousel.astro";
import Frame from "$components/image-frame.astro";
import orblebeta1 from "~/assets/images/beta-renders/front-left.jpg";
import orblebeta2 from "~/assets/images/beta-renders/front.jpg";
import orblebeta3 from "~/assets/images/beta-renders/front-right.jpg";
import orblebeta4 from "~/assets/images/beta-renders/zoom-in.jpg";

import office from "~/assets/images/archviz apartment 2.jpg";
import airport from "~/assets/images/airport render 3.jpg";
import campus from "~/assets/images/archviz 1 with people studying 1.jpg";
import hospital from "~/assets/images/hospital-hallway.jpg";
import gym from "~/assets/images/gym.png";
import mall from "~/assets/images/mall.webp";

import classic from "~/assets/images/boba.png";
import dumbells from "~/assets/images/dumbells.png";
import coffee from "~/assets/images/caffeine.png";

import tealbar from "~/assets/images/teal-bar.png";
import cad from "~/assets/images/cad-render.png";

import ContactForm from "~/components/contact-form.astro";
import MailingList from "~/components/mailing-list.astro";

import MenuThemeItem from "~/components/menu-theme-item.astro";
import DynamicCarousel from "~/components/carousel.astro";
import LocationItem from "~/components/location-item.astro";

const next_gen_images = [
  { src: "/media/next-gen1.png", alt: "Machine from left view" },
  { src: "/media/next-gen2.png", alt: "Group photo" },
  { src: "/media/next-gen3.mp4", alt: "Video pan", isVideo: true },
];

const locations = [
  {
    image: office,
    title: "Office Parks",
    alt: "Image of an office park",
    description: "Energize employees and boost workplace satisfaction.",
  },
  {
    image: airport,
    title: "Transit Hubs",
    alt: "Image of an airport terminal",
    description: "Fuel travellers on the go with a sweet sip.",
  },
  {
    image: campus,
    title: "Universities",
    alt: "Imag of a university campus",
    description: "Give students a grab-n-go, delicious study break.",
  },
  {
    image: hospital,
    title: "Hospitals",
    alt: "Image of a hospital hallway",
    description: "Refresh and recharge.",
  },
  {
    image: gym,
    title: "Fitness Centers",
    alt: "Image of a fitness center interior",
    description: "Power workouts with a tasty treat.",
  },
  {
    image: mall,
    title: "Shopping Centers",
    alt: "Image of a shopping center",
    description: "Offer a convenient beverage option for browsing.",
  },
];

const carouselImages = [
  { src: orblebeta1, alt: "front left view of the orble beta machine" },
  { src: orblebeta2, alt: "front view of the orble beta machine" },
  { src: orblebeta3, alt: "front right view the of orble beta machine" },
  { src: orblebeta4, alt: "zoomed in view of the orble beta machine" },
];

const menuThemes = [
  {
    image: classic,
    alt: "boba cup icon",
    title: "Classic",
    description:
      "The top selling flavors in every boba shop: Black, Thai, and Taro.",
  },
  {
    image: dumbells,
    alt: "dumbell icon",
    title: "High Protein Menu",
    description: "Packed with protein: Strawberry, Matcha, Jasmine",
  },
  {
    image: coffee,
    alt: "coffee bean icon",
    title: "Caffeine Boost Series",
    description: "Boostd pick-me-ups: Brown Sugar, Matcha, and Earl Grey",
  },
];

const sectionData = [
  // what,
  about,
];

const { generator, site } = Astro;
const image = new URL(siteInfo.preview_image, site);

const sections = sectionData.map((s) => ({
  info: {
    id: Path.parse(s.file).name,
    title: s.frontmatter.title,
    subtitle: s.frontmatter.subtitle,
    Body: s.Content,
  } as SectionInfo,
  Layout: s.layout,
}));

const navItems: NavItem[] = sections.map((s) => ({
  id: "#" + s.info.id,
  title: s.info.title,
}));
const target = navItems[0];
navItems.push(
  {
    id: "#features",
    title: "Features",
  },
  {
    id: "#contact",
    title: "Contact Us",
  },
);
---

<!doctype html>
<html
  lang="en"
  class="h-full bg-white font-sans motion-safe:scroll-smooth"
  data-theme="light"
>
  <head>
    <script defer src="https://munch-umami.netlify.app/script.js" data-website-id="d0f6074d-a540-41fd-afbc-3f1ec1c83d55"></script>
    <base href={import.meta.env.BASE_URL} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={generator} />

    <title>{siteInfo.title}</title>
    <meta name="description" content={siteInfo.description} />

    <!-- social media -->
    <meta property="og:title" content={siteInfo.title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={siteInfo.description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header
      mainTitle={siteInfo.title}
      navItems={navItems}
      scrollTarget={target}
    />
    <Splash />

    <style>
      .orble-tea-bg-one {
        background-image: url("../assets/images/bg-design/orble-tea-bg.svg");
        background-repeat: no-repeat;
        background-position: 0px 40px;
        background-size: cover;
      }
      @media (max-width: 640px) {
        .orble-tea-bg-one {
          clip-path: inset(0 0 80px 0);
        }
      }

      .orble-tea-bg-long {
        background-image: url("../assets/images/bg-design/orble-tea-bg-long.svg");
        background-repeat: no-repeat;
        background-position: 0px 40px;
        background-size: cover;
      }
      @media (max-width: 640px) {
        .orble-tea-bg-long {
          clip-path: inset(0 0 80px 0);
        }
      }

      .features-title {
        color: #fff;
        text-align: center;
        font-size: 32px;
        font-weight: 500;
        line-height: normal;
      }

      .features-content {
        color: #000;
        text-align: center;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        letter-spacing: 0.8px;
      }

      #orble-video {
        box-shadow: 19px 21px 0px 0px black;
      }

      .status-message {
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        text-align: center;
        max-width: 28rem;
        margin-left: auto;
        margin-right: auto;
      }

      .status-success {
        background-color: #d1fae5;
        color: #065f46;
        border: 1px solid #6ee7b7;
      }

      .status-error {
        background-color: #fee2e2;
        color: #991b1b;
        border: 1px solid #fca5a5;
      }
    </style>

    <!-- Orble beta logo + header -->
    <div
      class="justify-left ml-[10%] mt-10 flex items-center gap-4 max-sm:ml-0 max-sm:justify-center"
    >
      <Image src={logo} alt="Orble Logo" width={140} class="max-sm:w-20" />
      <div class="flex flex-col">
        <div class="flex items-baseline gap-2">
          <h1
            class="font-heading leading-none tracking-tight text-9xl max-sm:text-9xl"
          >
            ORBLE
          </h1>
          <span
            class="font-heading italic leading-none tracking-tight text-[#9DD9C8] text-6xl max-sm:text-4xl"
            >BETA</span
          >
        </div>
        <p
          class="font-lato -mt-3 ml-1 tracking-[0.1em] text-lg max-sm:-mt-2 max-sm:text-sm"
        >
          the bubble tea ATM
        </p>
      </div>
    </div>

    <div class="orble-tea-bg-long w-full pb-28 pt-20 font-sans">
      <div class="mx-[10%]">
        <div class="mb-10 max-w-[80%] max-sm:mx-auto max-sm:max-w-[90%]">
          <h3
            class="mb-4 italic leading-tight tracking-normal text-white text-2xl max-sm:text-center max-sm:text-xl"
          >
            <span
              class="text-munch-blue inline align-baseline font-heading italic leading-none text-6xl max-sm:text-4xl lg:text-6xl"
            >
              ORBLE BETA
            </span>
            is available now, partnering with select businesses in the Philadelphia
            area
          </h3>
          <h3
            class="text-munch-blue my-6 tracking-normal text-sm max-sm:text-center"
          >
            We bring boba to every corner without the overhead or cost. Boba is
            popular among younger consumers, but it’s not easily accessible
            unless you’re near a shop—and most close early. Orble changes that.
            Orble Beta is a fully managed, ready-to-serve vending machine
            delivering fresh boba drinks. We handle sourcing, restocking,
            maintenance, and operations, so you can offer high-quality boba
            anytime. Getting started with Orble is free. We manage setup and
            service, while you enjoy higher engagement, happier customers, and a
            share of sales—hassle-free.
          </h3>
        </div>

        <!-- Two column layout for menu and image -->
        <div class="grid grid-cols-1 items-stretch gap-6 lg:grid-cols-2">
          <!-- Left column: Menu + Specifications stacked -->
          <div class="space-y-6">
            <!-- Menu section -->
            <div class="relative">
              <div
                class="absolute inset-0 rounded-3xl bg-transparent shadow-2xl shadow-black/50 backdrop-blur-md"
              >
              </div>

              <div class="relative flex flex-col p-6 sm:p-8">
                <h3
                  class="text-center font-heading italic tracking-normal text-white text-xl"
                >
                  Your menu, your way
                </h3>
                <p
                  class="text-munch-blue mx-auto mb-5 max-w-2xl text-center text-xs"
                >
                  Whether you're serving students, office workers, or residents,
                  Orble lets you tailor your menu to match your consumer's
                  tastes.
                </p>

                <ul class="space-y-4">
                  {
                    menuThemes.map((theme) => (
                      <MenuThemeItem
                        image={theme.image}
                        alt={theme.alt}
                        title={theme.title}
                        description={theme.description}
                      />
                    ))
                  }
                </ul>
              </div>
            </div>

            <!-- Specifications section -->
            <div class="relative">
              <div
                class="absolute inset-0 rounded-3xl bg-teal-theme shadow-2xl shadow-black/50 backdrop-blur-md"
              >
              </div>

              <div class="relative p-3 sm:p-4">
                <h3
                  class="mb-2 text-center font-heading italic tracking-wide text-white text-xl"
                >
                  SPECIFICATIONS
                </h3>

                <div class="space-y-1">
                  <div class="grid grid-cols-3 gap-1">
                    <div
                      class="rounded-lg bg-blue-100/90 px-1 py-1 text-center"
                    >
                      <p class="font-heading text-gray-800 text-xs">
                        DIMENSIONS
                      </p>
                    </div>
                    <div
                      class="col-span-2 rounded-lg bg-blue-100/90 px-2 py-1 text-center"
                    >
                      <p class="text-gray-800 text-xs">
                        76.5" (90" with sign) x 40" x 31"
                      </p>
                    </div>
                  </div>

                  <div class="grid grid-cols-3 gap-1">
                    <div
                      class="rounded-lg bg-blue-100/90 px-1 py-1 text-center"
                    >
                      <p class="font-heading text-gray-800 text-xs">
                        ELECTRICITY
                      </p>
                    </div>
                    <div
                      class="col-span-2 rounded-lg bg-blue-100/90 px-2 py-1 text-center"
                    >
                      <p class="text-gray-800 text-xs">AC 110V~240V 50-60Hz</p>
                    </div>
                  </div>

                  <div class="grid grid-cols-3 gap-1">
                    <div
                      class="rounded-lg bg-blue-100/90 px-1 py-1 text-center"
                    >
                      <p class="font-heading text-gray-800 text-xs">WEIGHT</p>
                    </div>
                    <div
                      class="col-span-2 rounded-lg bg-blue-100/90 px-2 py-1 text-center"
                    >
                      <p class="text-gray-800 text-xs">
                        650 lb (empty) / 870 lb (full)
                      </p>
                    </div>
                  </div>

                  <div class="grid grid-cols-3 gap-1">
                    <div
                      class="rounded-lg bg-blue-100/90 px-1 py-1 text-center"
                    >
                      <p class="font-heading text-gray-800 text-xs">PAYMENT</p>
                    </div>
                    <div
                      class="col-span-2 rounded-lg bg-blue-100/90 px-1 py-1 text-center"
                    >
                      <p class="text-gray-800 text-xs">Card & Tap to Pay</p>
                    </div>
                  </div>

                  <div class="rounded-lg bg-blue-100/90 px-1 py-1 text-center">
                    <p class="text-gray-800 text-xs">
                      Refrigerated at 4°C / 39.2°F
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Right column: Image carousel -->
          <div class="flex items-stretch lg:h-full">
            <div class="w-full">
              <ImageCarousel items={carouselImages} />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Locations advert -->
    <main class="px-8 py-10 sm:px-16">
      <h3
        class="text-munch-blue mb-10 text-center italic tracking-normal text-2xl"
      >
        Imagine Orble Beta in your space
      </h3>

      <DynamicCarousel items={locations} ItemComponent={LocationItem} />
    </main>

    <!-- Contact advert -->
    <div class="relative mx-auto mb-14 w-[90%] px-8 max-sm:px-4">
      <div
        class="absolute inset-0 rounded-3xl bg-teal-theme shadow-xl backdrop-blur-md"
      >
      </div>
      <div
        class="relative flex flex-col items-center p-12 text-center max-sm:p-6"
      >
        <h3
          class="mb-6 italic tracking-normal text-white text-2xl max-sm:mb-4 max-sm:text-xl"
        >
          Have questions about partnerships?
        </h3>
        <div class="flex flex-col gap-4 max-sm:w-full max-sm:gap-3 sm:flex-row">
          <a
            href="#contact"
            class="text-munch-blue rounded-full bg-tan-theme px-8 py-3 font-semibold transition-colors hover:bg-white max-sm:px-6 max-sm:py-2.5 max-sm:text-sm"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>

    <!-- Orble next gen logo -->
    <div
      class="justify-left ml-[10%] mt-10 flex items-center gap-4 max-sm:ml-0 max-sm:justify-center"
    >
      <Image src={logo} alt="Orble Logo" width={140} class="max-sm:w-20" />
      <div class="flex flex-col">
        <div class="flex items-baseline gap-2">
          <h1
            class="font-heading leading-none tracking-tight text-9xl max-sm:text-9xl"
          >
            ORBLE
          </h1>
          <span
            class="font-heading italic leading-none tracking-tight text-[#9DD9C8] text-6xl max-sm:text-4xl"
            >NEXT GEN</span
          >
        </div>
        <p
          class="font-lato -mt-3 ml-1 tracking-[0.1em] text-base max-sm:-mt-2 max-sm:text-sm"
        >
          a fully au<span class="font-bold italic">tea</span>matic boba machine
          (coming soon...)
        </p>
      </div>
    </div>

<div class="orble-tea-bg-one w-full pb-20 font-sans">
  <div class="mx-[10%] grid grid-cols-1 gap-10 gap-y-2 sm:grid-cols-2">
    <div class="col-span-1 row-span-1 mt-20">
      <div class="max-sm:text-center">
        <span
          class="inline align-baseline font-heading leading-none text-white text-6xl max-sm:text-6xl lg:text-6xl"
        >
          ORBLE
        </span>
      </div>
      <h3
        class="italic tracking-normal text-white text-2xl max-sm:text-center"
      >
        is a revolutionary boba tea machine
      </h3>
      <h3
        class="text-munch-blue my-6 tracking-normal text-sm max-sm:text-center"
      >
        Orble is the only machine that can cook both tapioca pearls and tea,
        designed to deliver freshly brewed bubble tea with unparalleled
        convenience and customization.
      </h3>
    </div>
    <div class="col-span-1 row-span-2 flex items-center justify-center">
      <Image src={cad} alt="Orble Machine 3d render" width={600} class="w-full max-w-[600px] h-auto" />
    </div>
    <div class="col-span-1 row-span-2 my-12 flex items-start justify-center">
      <video width="500" autoplay loop muted playsinline id="orble-video" class="w-full max-w-[500px] h-auto">
        <source src="/media/next-gen-render-video.mp4" type="video/mp4" />
        Your browser does not support this video.
      </video>
    </div>
    <div class="col-span-1 row-span-1 max-sm:text-center flex flex-col justify-center">
      <div>
        <span class="text-l text-munch-blue mt-6 tracking-normal"
          >With its</span
        >
        <span class="text-munch-blue ml-2 italic tracking-normal text-3xl"
          >sleek and compact design,</span
        >
        <h3 class="text-l text-munch-blue tracking-normal">
          Orble seamlessly integrates into any food service environment,
          offering customers a delightful boba tea experience at the touch of
          a button.
        </h3>
      </div>
      <Image src={tealbar} alt="Bar" width={400} class="mx-auto mt-10" />
    </div>
  </div>
</div>

    <!-- Video + media section-->
    <div
      id="media"
      class="mt-12 flex w-full flex-col items-center gap-8 max-sm:mt-2"
    >
      <div class="px-4 sm:px-0">
        <div
          class="mx-auto aspect-video w-full max-w-6xl overflow-hidden rounded-xl shadow-lg"
        >
          <video
            src="/media/long-video.mp4"
            controls
            autoplay
            muted
            loop
            playsinline
            webkit-playsinline
            x5-playsinline
            class="h-full w-full object-cover"></video>
        </div>
      </div>

      <!-- Desktop grid (shown on sm and up) -->
      <div class="hidden w-full justify-center gap-6 sm:flex">
        {
          next_gen_images.map((item, index) => (
            <Frame
              mediaType={index === 2 ? "video" : "image"}
              src={item.src}
              alt={item.alt}
              className="h-64 md:h-96 w-auto max-w-[30%]"
            />
          ))
        }
      </div>

      <!-- Mobile carousel (shown below sm) -->
      <div class="relative w-full px-4 sm:hidden" id="mobile-carousel">
        <ImageCarousel
          items={next_gen_images}
          auto={false}
          height="h-[550px]"
        />
      </div>
    </div>
  </body>

  <!-- Features section -->
  <div id="features" class="z-10 mt-6 flex justify-center font-sans sm:mt-8">
    <div
      class="flex h-auto w-[90%] flex-col items-center rounded-[80px] bg-[#B1D9CD] p-12"
    >
      <div class="features-title mb-[47px] font-heading underline-offset-4">
        Unique Features
      </div>
      <div class="flex flex-row flex-wrap justify-center gap-10">
        <div class="flex flex-col items-center">
          <div
            class="flex h-[76px] w-[76px] items-center justify-center rounded-full bg-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="57"
              height="57"
              viewBox="0 0 57 57"
              fill="none"
            >
              <path
                d="M12.1357 4.28613L9.62766 6.79057L13.3594 10.5205L15.8638 8.01607L12.1357 4.28613ZM44.8661 4.28613L41.1344 8.01607L43.6406 10.5205L47.3706 6.79235L44.8661 4.28613ZM28.5 5.39763C27.9122 5.40476 27.3172 5.4386 26.7188 5.51163C26.7009 5.51163 26.6831 5.50807 26.6653 5.51163C19.4406 6.33991 13.6907 12.1771 12.6914 19.3698C11.8934 25.1588 14.2803 30.4082 18.2578 33.789C19.8848 35.1775 20.9853 37.083 21.375 39.1862V49.8737H25.4362C26.0561 50.9371 27.1872 51.6549 28.5 51.6549C29.8128 51.6549 30.9439 50.9371 31.5637 49.8737H35.625V42.7487H35.7924V40.6325C35.7924 38.0212 37.1497 35.3885 39.3549 33.3419C42.3047 30.3886 44.5312 26.1937 44.5312 21.3754C44.5312 12.5761 37.2887 5.3157 28.5 5.39763ZM28.5 8.96013C35.3845 8.86395 40.9688 14.4998 40.9688 21.3754C40.9688 25.1054 39.2409 28.39 36.8487 30.7804L36.9057 30.8374C34.5284 33.0296 32.9912 35.9831 32.5595 39.1879H24.7683C24.3764 36.1349 23.0672 33.1798 20.593 31.0601C17.4456 28.3882 15.5699 24.3626 16.1969 19.8169C16.9753 14.2059 21.5282 9.69401 27.1071 9.07591C27.5677 9.0117 28.0315 8.97364 28.4964 8.96192L28.5 8.96013ZM3.5625 21.3754V24.9379H8.90625V21.3754H3.5625ZM48.0938 21.3754V24.9379H53.4375V21.3754H48.0938ZM13.3594 35.7929L9.62944 39.521L12.1357 42.0273L15.862 38.2973L13.3594 35.7929ZM43.6406 35.7929L41.1362 38.2973L44.8643 42.0273L47.3706 39.521L43.6406 35.7929ZM24.9375 42.7504H32.0625V46.3129H24.9375V42.7504Z"
                fill="#B1D9CD"></path>
            </svg>
          </div>
          <div
            class="features-content mt-[40px] flex h-[112px] w-[331px] items-center justify-center rounded-[100px] bg-white"
          >
            <p class="w-[241px]">
              <span class="font-bold">Cooks drinks real-time</span> to ensure fresh
              quality and flavor in every cup.
            </p>
          </div>
        </div>
        <div class="flex flex-col items-center">
          <div
            class="flex h-[76px] w-[76px] items-center justify-center rounded-full bg-white"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="54"
              height="54"
              viewBox="0 0 54 54"
              fill="none"
